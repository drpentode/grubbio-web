			<%= link_to "Producers Directory", businesses_path, :class => "index-action-button" %>
		</div>
		<div class="pure-u-1-4">
			<%= link_to "Other Resources", "/resources", :class => "index-action-button" %>
		</div>
	</div>
</section>

