%section#markets-list
  .page-header{:style => "margin-bottom: 20px;"}
    .pure-g
      .pure-u-1-2
        %h2 Local Farmers Markets
      .pure-u-1-2{:style => "text-align: right;"}
  #market-count
    = "Found #{@total_count} markets"
    %table.pure-table.pure-table-horizontal{:style => "width: 100%; font-size: 14px;"}
      %tr
        %th
          Name:
        %th
          City, State
        %th
          Website:
      - @markets.each do |market|
        %tr
          %td{:style => "width: 60%;"}
            = link_to market.market_name, market_path(market)
          %td{:style => "width: 20%;"}
            = market.city
            , #{market.state}
          %td{:style => "width: 20%;"}
            - if market.website
              = link_to "website", market.website, target: '_blank'