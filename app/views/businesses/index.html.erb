<h2>Business</h2>

<p>Setup your business here.</p>

<p><%= link_to "New Business", new_business_path %></p>

<% if @businesses && @businesses.size > 0 %>
  <table>
    <tr>
      <th>
        <strong>Name</strong>
      </th>
      <th>
        <strong>Description</strong>
      </th>
      <th>
        <strong>Actions</strong>
      </th>
    </tr>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.description %></td>
        <td>
          <% if business.business_profile %>
            <%= link_to "Edit Profile", edit_business_business_profile_path(business) %> |
          <% else %>
            <%= link_to "Add Profile", new_business_business_profile_path(business) %> |
          <% end %>

          <%= link_to "Edit", edit_business_path(business) %> | 
          <%= button_to "Delete", business_path(business), :method => :delete, :confirm => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>