<section id="profile">
	<div class="pure-g-r">
		<div class="pure-u-1-3">
			<img src="http://placehold.it/300x500" width="300" alt="farmer john profile" />
		</div>
		<div class="pure-u-2-3" style='padding-top: 20px;'>
			<h2>Sign In</h2>

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { :class => 'pure-form pure-form-stacked' }) do |f| %>
			  <%= f.label :email %>
			  <%= f.email_field :email, autofocus: true %>

			  <%= f.label :password %>
			  <%= f.password_field :password %>
			  <br><br>
			  <%= f.button "Sign in", :class => "pure-button pure-button-primary" %>
			<% end %>

			<br><br><br>

			Don't have an account yet? <%= link_to "Sign up", new_user_registration_path %>.

		</div>
	</div>
</section>