<section id="site-head">
	<div class="pre-nav">
		<span>
			<% if user_signed_in? %>
				currently signed in as: <%= link_to current_user.email, user_path(current_user) %> | 
				<%= link_to "Logout", destroy_user_session_path, method: :delete %>
			<% else %>
				<%= link_to "Sign in", new_user_session_path %>
				or
				<%= link_to "Sign up", new_user_registration_path %>
			<% end %>
		</span>
	</div>
	<nav class="main-nav">
		<h1><%= link_to "Grubb.io", root_path, style: "color: #fff; text-decoration: none;" %> <span>your local source</span></h1>
	</nav>
</section>