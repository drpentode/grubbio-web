html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font: inherit;
  font-size: 100%;
  vertical-align: baseline;
}

html {
  line-height: 1;
}

ol, ul {
  list-style: none;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

caption, th, td {
  text-align: left;
  font-weight: normal;
  vertical-align: middle;
}

q, blockquote {
  quotes: none;
}
q:before, q:after, blockquote:before, blockquote:after {
  content: "";
  content: none;
}

a img {
  border: none;
}

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section, summary {
  display: block;
}

body {
  font-size: 16px;
  font-size: 62.5%;
}

h1 {
  font-family: "Leckerli One", "Times New Roman", Times, serif;
  color: white;
  font-size: 3.6em;
  padding: .6em;
}
h1 > span {
  font-family: "Lato", Helvetica, Arial, sans-serif;
  font-size: .4em;
  vertical-align: middle;
}

h2 {
  font-family: "Lato", Helvetica, Arial, sans-serif;
  color: #f39c12;
  font-size: 2.5em;
  margin-bottom: 1em;
}

.pre-nav {
  font-family: "Lato", Helvetica, Arial, sans-serif;
  font-size: 1.2em;
  text-align: right;
  padding: 2em;
  color: #bdc3c7;
}

a {
  text-decoration: underline;
  color: #bdc3c7;
}
a:hover {
  color: #f39c12;
}

body {
  max-width: 960px;
  margin: 0 auto;
  font-family: "Lato", Helvetica, Arial, sans-serif;
}

.vertical-margin {
  margin-bottom: 2em;
}

nav.main-nav, footer {
  background-color: #f39c12;
  border-bottom: 1px solid #d35400;
}

footer {
  margin-top: 2em;
  border-bottom: none;
  border-top: 1px solid #d35400;
  text-align: center;
  color: white;
  font-size: 1.2em;
  font-family: "Lato", Helvetica, Arial, sans-serif;
  padding: 1em;
}

#uber-search, #small-search {
  background: url("<%= asset_path 'bg.jpg' %>") center top no-repeat;
  background-size: cover;
  height: 350px;
  margin-bottom: 2em;
  position: relative;
}

#small-search {
  height: 100px;
}

#uber-search > form, #small-search > form {
  position: absolute;
  top: 46%;
  left: 18.75%;
  color: #bdc3c7;
  margin: 0 auto;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  -ms-border-radius: 8px;
  -o-border-radius: 8px;
  border-radius: 8px;
}
#uber-search > form input, #uber-search > form button, #small-search > form input, #small-search > form button {
  height: 44px;
  font-size: 2em;
  background-color: #fafafa;
  color: #bdc3c7;
}
#uber-search > form input:active, #uber-search > form input:focus, #small-search > form input:active, #small-search > form input:focus {
  border: 1px solid #f39c12;
}
#uber-search > form button, #small-search > form button {
  background-color: #f39c12;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  -ms-border-radius: 4px;
  -o-border-radius: 4px;
  border-radius: 4px;
  color: #d35400;
}

#small-search > form {
  top: 25%;
}

